{
    "compilerOptions": {
        "module": "ES2022",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2022",
        "lib": ["ES2022"],
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": true
    }
}